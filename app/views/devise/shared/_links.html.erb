<hr class="border-dark my-5">
<div class="form-group">
　<%- if controller_name != 'sessions' %>
    <%= link_to "アカウントをお持ちの方", new_session_path(resource_name), class: 'btn btn-info btn-block' %><br />
  <% end -%>
  
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "アカウントをお持ちでない方", new_registration_path(resource_name), class: 'btn btn-info btn-block' %><br />
  <% end -%>

  <%- if devise_mapping.omniauthable? %>
    <div class="twitter-btn btn btn-block ">
    <i class="fab fa-twitter my-white"></i> <%= link_to "Twitterアカウントでログイン", user_twitter_omniauth_authorize_path,class:'text-light' %>
    </div>
    <div class="facebook-btn btn btn-block ">
    <i class="fab fa-facebook my-white"></i> <%= link_to "Facebookアカウントでログイン", user_facebook_omniauth_authorize_path,class:'text-light' %>
    </div>
  <% end -%>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.hidden_field :email ,value: "test@example.com", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.hidden_field :password ,value: "password", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "かんたんログイン", class: "btn  btn-dark btn-block" %>
  </div>
<% end %>
</div>
