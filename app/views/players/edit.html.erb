<% provide(:title,"プロフィール編集")%>
<h2>プレイヤー情報を編集しよう。</h2>
<div class="row">
  <div class="col-md-6 col-md-offset-3">


    <%= form_with model:@player , local:true , url: player_path  do |f| %> 

        <div class="form-group">
            <%= f.label :gender,"性別"%>
            <%= f.select :gender, Player.genders.keys ,class: "form-control"%>
        </div>

        <div class="form-group">
            <%= f.label :prefecture,'地域(必須)'%>
            <%= f.text_field :prefecture,class:'form-control'%>
        </div>
        <div class="form-group">
            <%= f.label :position,'ポジション(必須)'%>
            <%= f.text_field :position,class:'form-control'%>
        </div> 

         <div class="form-group">
            <%= f.label :schedule,'練習参加可能日'%>
            <%= f.text_field :schedule,class:'form-control'%>
        </div>

        <div class="form-group">
            <%= f.label :content,'フリーコメント'%>
            <%= f.text_area :content,class:'form-control'%>
       </div>
     
      <%= f.submit "編集する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
